@model HomeVM

<div id="main-banner" class="banner-one" data-scroll-index="0">
    @foreach (var slide in Model.Banners)
    {
        <div data-src="uploads/@slide.PhotoUrl">
            <div class="camera_caption">
                <div class="container">
                    <h1 class="wow fadeInUp animated">@slide.Title</h1>
                    <p class="wow fadeInUp animated" data-wow-delay="0.2s">@slide.SubTitle</p>
                    <a data-scroll href="#" class="btn btn-light btn-radius btn-brd grd1">DONATE</a>
                </div> <!-- /.container -->
            </div> <!-- /.camera_caption -->
