                                <i class="flaticon-unlink[]"></i>
                            </a>
                            <img src="uploads/@about.PhotoUrl" alt="" class="img-responsive">
                            <div class="hover-up">
                                <h3>@about.Title</h3>
                                <p>@about.SubTitle</p>
