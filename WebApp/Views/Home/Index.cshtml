                </div>

                <!-- end col -->

                <div class="col-md-6">
                    <div class="post-media wow fadeIn">
                        <img src="uploads/@who.Photo" alt="" class="img-responsive img-rounded">
                        <a href="@who.PhotoUrl" data-rel="prettyPhoto[gal]" class="playbutton">
